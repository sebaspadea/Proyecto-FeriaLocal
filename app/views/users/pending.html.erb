<div class="container-fluid my-5">
  <% if !(@pending.empty?) %>
    <h6><%= @pending.count %> movies to watch</h6>
    <div class="row">
      <% @pending.each do |p| %>
        <div class="col-md-3 my-3" id="movie-card">
          <div class="card">
              <%= image_tag p.poster, class: "img-fluid", crop: :fill %>
          </div>
          <div class="card-footer">
            <h4 class="text-truncate"> <%= p.title %> </h4>
              <h6> <%= p.year %> </h6>  
            <div class="d-flex justify-content-between">
              <%= link_to "Mark as favorite", movie_path(p.id), class: "text-muted", method: :patch %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>