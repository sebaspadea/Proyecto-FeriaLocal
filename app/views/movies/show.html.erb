<div class="container mt-3">
  <h1><%= @movie["Title"]%></h1>
  <p><%= @movie["Released"]%>, <%= @movie["Runtime"]%>, <%= @movie["Genre"]%> </p>
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @movie["Poster"], class: "img-fluid imagen-show imagenes" %>
      <div class="my-2">
        
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="mt-1 mb-3 border-bottom border-warning text-center">Information</h3>
      <h5>Director: <%= @movie["Director"]%></h5>
      <h5>Writer: <%= @movie["Writer"]%></h5>
      <h5>Actors: <%= @movie["Actors"]%></h5>
      <h5>Awards: <%= @movie["Awards"]%></h5>
      <h5>Country: <%= @movie["Country"]%></h5>
      <h5>imdbRating: <%= @movie["imdbRating"]%> ‚≠ê</h5>
      <h3 class="mb-3 border-bottom border-warning text-center">Reviews</h3>
      <% @movie["Ratings"].each do |r| %>
        <h5><%= r["Source"]%>: <%= r["Value"]%> <%= r["Source"] != "Rotten Tomatoes" ? "‚≠ê": "üçÖ" %></h5>
      <% end %>
    </div>
  </div>
</div>